<Window x:Class="WpfApp_FinancialPlanner.Views.EditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагувати категорію" Height="280" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Назва категорії" Margin="0,0,0,5"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

            <TextBlock Text="Тип" Margin="0,0,0,5"/>
            <ComboBox x:Name="TypeComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="витрата"/>
                <ComboBoxItem Content="дохід"/>
            </ComboBox>

            <TextBlock Text="Іконка" Margin="0,0,0,5"/>
            <ComboBox x:Name="IconComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="🛒 Продукти"/>
                <ComboBoxItem Content="🍔 Їжа"/>
                <ComboBoxItem Content="💼 Робота"/>
                <ComboBoxItem Content="🎉 Розваги"/>
                <ComboBoxItem Content="🚌 Транспорт"/>
                <ComboBoxItem Content="🏠 Житло"/>
                <ComboBoxItem Content="📚 Освіта"/>
                <ComboBoxItem Content="🧾 Рахунки"/>
                <ComboBoxItem Content="💰 Дохід"/>
            </ComboBox>

            <Button Content="Зберегти зміни" Click="Save_Click" Background="#03045e" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>

<Page x:Class="Wpf_FinancialPlanner.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_FinancialPlanner.Views"
      xmlns:vm="clr-namespace:Wpf_FinancialPlanner.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Page.DataContext>
        <vm:DashboardViewModel/>
    </Page.DataContext>

    <Grid Background="#F4F6FA" Margin="20">
        <StackPanel>
            <!-- Привітання -->
            <TextBlock Text="LaFinance" FontSize="24" FontWeight="Bold" Foreground="#6C63FF" Margin="10,0,0,20"/>

            <!-- Назва секції -->
            <TextBlock Text="Мої баланси" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Foreground="#6C63FF" 
                       Margin="10,0,0,10"/>

            <!-- Список балансів -->
            <ItemsControl ItemsSource="{Binding Balances}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" 
                                BorderBrush="#D0D0D0" 
                                Background="White" 
                                CornerRadius="10" 
                                Padding="10" 
                                Margin="10,5">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Icon}" 
                                           FontSize="20" 
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Amount, StringFormat='{}{0:N0} ₴'}"
                                           Foreground="#2B2B2B"
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Page>
